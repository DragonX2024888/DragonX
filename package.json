{
  "name": "dragonx",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "chai": "^4.2.0",
    "ethers": "^6.9.2",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "contracts:cloc": "cloc contracts --exclude-dir mocks",
    "contracts:compile": "hardhat compile",
    "contracts:size": "hardhat size-contracts",
    "lint": "eslint . --ext .ts -c .eslintrc --fix",
    "contracts:test": "hardhat --typecheck --emoji test --network hardhat",
    "contracts:coverage": "hardhat coverage",
    "dev:local:node": "hardhat run ./scripts/hardhat-node.ts",
    "dev:local:run": "concurrently \"hardhat run ./scripts/hardhat-node.ts\" \"cross-env wait-on http-get://127.0.0.1:8545 && hardhat run scripts/local.ts --network localnode\"",
    "dev:local:run-init": "concurrently \"hardhat run ./scripts/hardhat-node.ts\" \"cross-env wait-on http-get://127.0.0.1:8545 && hardhat run scripts/local-init.ts --network localnode\"",
    "dev:local:set-timestamp": "hardhat set-timestamp --network localnode",
    "dev:local:get-timestamp": "hardhat get-timestamp --network localnode",
    "dev:titanx:print-error-codes": "hardhat run scripts/print-titanx-error-codes.ts",
    "dev:titanx:quote": "hardhat run scripts/titanx-quote.ts"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "@types/cli-progress": "^3.11.5",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@uniswap/swap-router-contracts": "^1.3.1",
    "@yarnpkg/sdks": "^3.1.0",
    "cli-progress": "^3.12.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-lodash": "^7.4.0",
    "hardhat": "^2.19.4",
    "hardhat-contract-sizer": "^2.10.0",
    "wait-on": "^7.2.0"
  }
}
